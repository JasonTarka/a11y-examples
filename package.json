{
  "name": "a11y-examples",
  "version": "0.0.1",
  "description": "A set of examples of interactive web controls designed to demonstrate accessibility patterns.",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:static && npm run build:js",
    "build:js": "babel index.js demo/**/*.js examples/**/*.js --out-dir dist",
    "build:static": "copyfiles ./demo/**/* ./examples/**/* ./dist && npm run build:polyfill",
    "build:polyfill": "copyfiles -f ./node_modules/babel-polyfill/dist/polyfill.min.js dist/demo",
    "start": "node index.js",
    "start:old-browser": "npm run build && cd dist && node index.js",
    "watch": "parallelshell \"npm run start:old-browser\" \"npm run watch:static\" \"npm run watch:js\"",
    "watch:static": "onchange \"demo/**/*\" \"examples/**/*\" -e \"./**/*.js\" -- npm run build",
    "watch:js": "onchange \"demo/**/*.js\" \"examples/**/*.js\" -- npm run build:js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/JasonTarka/a11y-examples.git"
  },
  "keywords": [
    "a11y",
    "accessibility",
    "WAI-ARIA",
    "ARIA",
    "example",
    "interactive",
    "click-to-edit",
    "edit-in-place"
  ],
  "author": "Jason Tarka <jason@tarka.ca>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JasonTarka/a11y-examples/issues"
  },
  "homepage": "https://github.com/JasonTarka/a11y-examples#readme",
  "dependencies": {
    "express": "^4.15.2"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-polyfill": "^6.23.0",
    "babel-preset-latest": "^6.24.1",
    "copyfiles": "^1.2.0",
    "onchange": "^3.2.1",
    "parallelshell": "^2.0.0"
  },
  "babel": {
    "presets": [
      "latest"
    ]
  }
}
